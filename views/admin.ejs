<!DOCTYPE html>
<html>

<head>
    <title>Admin</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet'>
</head>

<body class="p-4 bg-light">
    <div class="d-flex justify-content-between mb-4">
        <h2>üõ°Ô∏è Admin V6</h2><a href="/" class="btn btn-outline-danger">Logout</a>
    </div>
    <% if(pendingDevices.length> 0){ %><div class="alert alert-info">
            <h5>üì± Pending Devices</h5>
            <% pendingDevices.forEach(function(d){ %>
                <div class="d-flex justify-content-between border-bottom p-2 bg-white"><span><strong>
                            <%= d.name %>
                        </strong> (<%= d.mac %>) - Owner: <%= d.username %></span>
                    <form action="/admin/approve_device" method="POST"><input type="hidden" name="deviceId"
                            value="<%= d.id %>"><button class="btn btn-sm btn-primary">Approve</button></form>
                </div>
                <% }); %>
        </div>
        <% } %>
            <div class="row">
                <div class="col-md-3">
                    <div class="card shadow p-3 mb-4">
                        <h5>üéüÔ∏è Vouchers</h5>
                        <form action="/admin/generate_voucher" method="POST"><button
                                class="btn btn-sm btn-dark w-100 mb-2">New Code</button></form>
                        <ul class="list-group">
                            <% vouchers.forEach(function(v){ %>
                                <li class="list-group-item">
                                    <%= v.code %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                    <div class="card shadow p-3">
                        <h5>‚è≥ User Requests</h5>
                        <% pendingUsers.forEach(function(u){ %>
                            <div class="d-flex justify-content-between border-bottom p-2">
                                <%= u.username %>
                                    <form action="/admin/approve_user" method="POST"><input type="hidden" name="userId"
                                            value="<%= u.id %>"><button class="btn btn-sm btn-success">‚úì</button></form>
                            </div>
                            <% }); %>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="card shadow p-3">
                        <h5>üë• User Management</h5>
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Limit (Mbps)</th>
                                        <th>Start</th>
                                        <th>End</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% activeUsers.forEach(function(u){ %>
                                        <tr>
                                            <form action="/admin/update_user" method="POST"><input type="hidden"
                                                    name="userId" value="<%= u.id %>">
                                                <td class="fw-bold">
                                                    <%= u.username %>
                                                </td>
                                                <td><input type="number" name="bandwidth"
                                                        class="form-control form-control-sm" placeholder="Unl"
                                                        value="<%= u.bandwidth_mbps %>" style="width:70px;"></td>
                                                <td><input type="time" name="start" class="form-control form-control-sm"
                                                        value="<%= u.start_time %>"></td>
                                                <td><input type="time" name="end" class="form-control form-control-sm"
                                                        value="<%= u.end_time %>"></td>
                                                <td><button class="btn btn-sm btn-primary">Save</button> <button
                                                        form="kick_<%= u.id %>"
                                                        class="btn btn-sm btn-danger">Kick</button></td>
                                            </form>
                                            <form id="kick_<%= u.id %>" action="/admin/kick_user" method="POST"
                                                style="display:none;"><input type="hidden" name="userId"
                                                    value="<%= u.id %>"></form>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
</body>

</html>