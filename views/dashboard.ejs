<!DOCTYPE html>
<html>

<head>
    <title>Dashboard</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            background: linear-gradient(135deg, #667eea, #764ba2);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            font-family: sans-serif;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            background: rgba(255, 255, 255, 0.95);
            width: 100%;
            max-width: 400px;
            padding: 30px;
        }
    </style>
</head>

<body>
    <div class="card" style="max-width:500px;">
        <div class="text-center mb-4">
            <h2 class="text-primary fw-bold">Welcome, <%= user.username %>
            </h2><span class="badge bg-success">Connected</span>
            <div class="text-muted small mt-2">Limit: <%= user.bandwidth_mbps ? user.bandwidth_mbps + ' Mbps'
                    : 'Unlimited' %>
            </div>
        </div>
        <h6 class="border-bottom pb-2">ðŸ“± My Devices</h6>
        <ul class="list-group mb-4">
            <% devices.forEach(function(d){ %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div><strong>
                            <%= d.name %>
                        </strong><br><small class="text-muted">
                            <%= d.mac %>
                        </small>
                        <% if(d.status==='PENDING' ){ %><span class="badge bg-warning text-dark">Pending</span>
                            <% } %>
                    </div>
                    <% if(d.status !=='APPROVED' ){ %>
                        <form action="/delete_device" method="POST" class="m-0"><input type="hidden" name="deviceId"
                                value="<%= d.id %>"><button class="btn btn-sm btn-outline-danger">x</button></form>
                        <% } %>
                </li>
                <% }); %>
        </ul>
        <h6 class="border-bottom pb-2">âž• Add New Device</h6>
        <form action="/add_device" method="POST" class="row g-2">
            <div class="col-6"><input type="text" name="name" class="form-control form-control-sm" placeholder="Name"
                    required></div>
            <div class="col-6"><input type="text" name="mac" class="form-control form-control-sm" placeholder="MAC"
                    required></div>
            <div class="col-12"><button class="btn btn-dark w-100 btn-sm">Add Device</button></div>
        </form>
        <div class="text-center mt-4"><a href="/" class="btn btn-outline-secondary btn-sm">Logout</a></div>
    </div>
</body>

</html>